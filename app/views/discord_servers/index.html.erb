<h1>Discord servery</h1>

<div>
  <%= link_to 'PÅ™idat Discord server', new_discord_server_path, class: 'ui green button' %>
</div>

<br>

<div class="ui cards">
  <% @discord_servers.each do |discord_server| %>
    <div class="ui card">
      <div class="image">
        <%= image_tag discord_server.embed_url %>
      </div>
      <div class="content">
        <p>
          <strong>Invite url</strong><br>
          <%= link_to discord_server.invite_url, discord_server.invite_url, target: '_blank' %>
        </p>

        <p>
          <strong>Priority:</strong>
          <%= discord_server.priority %>
        </p>
      </div>
      <div class="content">
        <%= link_to 'Upravit', edit_discord_server_path(discord_server), class: 'ui primary button' %>
        <%= link_to 'Smazat', discord_server, method: :delete, class: 'ui red button', data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
</div>