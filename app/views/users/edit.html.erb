<%= form_with(model: @user, url: user_url(@user), method: :patch) do %>
  <div class="form-group">
    <%= label_tag "Jméno a příjmení (nepovinné)" %>
    <%= text_field :user, :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-5">
    <%= submit_tag "Uložit změny", class: 'btn btn-primary' %>
  </div>
<% end %>